include ../room-number/room-number.pug
include ../date-dropdown/date-dropdown.pug
include ../dropdown/dropdown.pug
include ../reservation/reservation.pug
include ../buttons/buttons.pug

mixin booking-card
	.booking-card
		.booking-card__container
			.booking-card__header
				+room-number('888', '9990₽')
			.booking-card__date-dropdown
				+date-dropdown('Прибытие', 'Выезд', '19.08.2019', '23.08.2019')
			.booking-card__dropdown
				+dropdown('гости')
			.booking-card__reservation
				+reservation
			.booking-card__button
				+buttons({type: 'button-long', text: 'Забронировать'})