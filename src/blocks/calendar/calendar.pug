include ../button-simple/button-simple.pug

mixin calendar(isOpen)
	if isOpen
		.calendar__showed
			.calendar__buttons
				.calendar__buttons-item
					+button-simple('Очистить')
				.calendar__buttons-item
					+button-simple('Применить')
	else
		.calendar
			.calendar__buttons
				.calendar__buttons-item
					+button-simple('Очистить')
				.calendar__buttons-item
					+button-simple('Применить')