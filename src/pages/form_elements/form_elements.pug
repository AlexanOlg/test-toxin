block title
	title Form Elements
block content
	.form-elements__container
		.form-elements__inner
			.form-elements__wrap
				.form-elements__wrap-item
					.form-elements__flex
						.form-elements__wrap-item_header text field
						.form-elements__wrap-item_flex default
					+text-field('Email')
				.form-elements__wrap-item
					.form-elements__flex
						.form-elements__wrap-item_header text field
						.form-elements__wrap-item_flex hover/focus
					+text-field('This is pretty awesome')
				.form-elements__wrap-item
					.form-elements__wrap-item_header dropdown
					+dropdown({
						items: [
							{menuItem: 'взрослые', number: '0'},
							{menuItem: 'дети', number: '2'},
							{menuItem: 'младенцы', number: '5'}
						],
					})
				.form-elements__wrap-item
					.form-elements__wrap-item_header masked text field
					.form-elements__wrap-field
						+text-field('ДД.ММ.ГГГГ')
				.form-elements__wrap-item
					.form-elements__wrap-datedropdown
						+date-dropdown('date dropdown', 'date dropdown', 'ДД.ММ.ГГГГ', '19.08.2019')
				.form-elements__wrap-item
					.form-elements__width
						.form-elements__wrap-item_header filter date dropdown
						+dropdown({
							items: [
								{menuItem: 'взрослые', number: '0'},
								{menuItem: 'дети', number: '2'},
								{menuItem: 'младенцы', number: '5'}
							],
						})
					.form-elements__width
						.form-elements__wrap-item_header subscription text field
						.form-elements__wrap-field
							+text-field('Email', 'true')
			.form-elements__wrap-centr
				.form-elements__wrap-item
					.form-elements__wrap-item_header checkbox buttons 
					+checkbox-button('Можно курить', false)
					+checkbox-button('Можно с питомцами', true)
					+checkbox-button('Можно пригласить гостей (до 10 человек)', true)
				.form-elements__wrap-item
					.form-elements__wrap-radio
						.form-elements__wrap-item_header radio buttons
						+radio-buttons
				.form-elements__wrap-item
					.form-elements__wrap-item_header toogle
						.form-elements__wrap-toogle
							+toogle(true)
							+toogle
				.form-elements__wrap-item
					.form-elements__wrap-item_header like button
					.form-elements__wrap-button
						+button-like(2, false)
						+button-like(12, true)
				.form-elements__wrap-item
					.form-elements__wrap-item_header rate button
					.form-elements__wrap-rate
						.form-elements__rate
							+rate-button('4', '5')
						.form-elements__rate
							+rate-button('5', '5')
			.form-elements__wrap
				.form-elements__wrap-range
					+range-slider('range slider')
				.form-elements__wrap-item
					.form-elements__wrap-item_header buttons
					.form-elements__wrap-item_buttons
						.form-elements__button-container
							+buttons({type: 'button', text: 'click me'})
						.form-elements__button-container
							+buttons({type: 'button-hovered', text: 'click me'})
					.form-elements__wrap-item_buttons
						.form-elements__button-container
							+buttons({type: 'button-border', text: 'click me'})
						.form-elements__button-container
							+buttons({type: 'button-border__hovered', text: 'click me'})
					.form-elements__wrap-item_buttons
						.form-elements__button-container
							+button-simple('click me')
						.form-elements__button-container
							+button-simple('click me', ' button_hovered')
					.form-elements__wrap-item_buttons
						+buttons({type: 'button-long', text: 'Перейти к оплате'})
				.form-elements__wrap-pagination
					.form-elements__wrap-item_header pagination
					+pagination('1')
		.form-elements__inner
			.form-elements__wrap
				.form-elements__wrap-dropdown
					.form-elements__wrap-item_header dropdown
					+dropdown({
						items: [
							{menuItem: 'спальни', number: '2'},
							{menuItem: 'кровати', number: '2'},
							{menuItem: 'ванные комнаты', number: '0'}
						],
					})
				.form-elements__wrap-dropdown
					.form-elements__wrap-item_header dropdown
					+dropdown({
						items: [
							{menuItem: 'спальни', number: '2'},
							{menuItem: 'кровати', number: '2'},
							{menuItem: 'ванные комнаты', number: '0'}
						],
					})
			.form-elements__wrap-centrdrop
				.form-elements__wrap-item
					.form-elements__wrap-item_header dropdown
					+dropdown({
						items: [
							{menuItem: 'взрослые', number: '0'},
							{menuItem: 'дети', number: '2'},
							{menuItem: 'младенцы', number: '5'}
						],
					})
			.form-elements__wrap
				.form-elements__wrap-item
					.form-elements__wrap-item_header dropdown
					+dropdown({
						items: [
							{menuItem: 'взрослые', number: '0'},
							{menuItem: 'дети', number: '2'},
							{menuItem: 'младенцы', number: '5'}
							],
						})
		.form-elements__inner
			.form-elements__wrap
				.form-elements__wrap-checkbox
					.form-elements__wrap-item_header
					+checkbox-list('true')
				.form-elements__wrap-checkbox
					.form-elements__wrap-item_header
					+checkbox-list
			.form-elements__wrap-centrdrop
				.form-elements__wrap-box
					.form-elements__wrap-item
						.form-elements__wrap-item_header rich Checkbox Buttons
						+checkbox-button('Широкий коридор', false, 'true', 'Ширина коридоров в номере не менее 91 см.')
						+checkbox-button('Помощник для инвалидов', false, 'true', 'На 1 этаже вас встретит специалист  и проводит до номера.')
			.form-elements__wrap
				.form-elements__wrap-checkbox
					.form-elements__wrap-item
						.form-elements__wrap-item_header bullet list
						+bullet-list('Нельзя с питомцами')
						+bullet-list('Без вечеринок и мероприятий')
						+bullet-list('Время прибытия — после 13:00, а выезд до 12:00')
		.form-elements__inner
			.form-elements__wrap
				.form-elements__wrap-item
					+facilities-room('Комфорт', 'Шумопоглощающие стены', 'insert_emoticon')
					+facilities-room('Удобство', 'Окно в каждой из спален', 'location_city')
			.form-elements__wrap-footer
				+reviews('Мурад сарафанов', '5 дней назад', 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.')